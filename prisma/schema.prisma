generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int      @id @default(autoincrement())
  nome        String
  descricao   String
  data        DateTime
  local       String
  limiteVagas Int

  // Relação com o usuário que criou o evento
  creatorId Int?
  creator   User? @relation("CreatedEvents", fields: [creatorId], references: [id])

  // Relação N:N com usuários inscritos
  inscricoes UserEvent[]

  createdAt DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  password String
  telefone String

  // Relação N:N com eventos
  inscricoes UserEvent[]

  // Eventos criados pelo usuário
  createdEvents Event[] @relation("CreatedEvents")

  createdAt DateTime @default(now())
}

model UserEvent {
  id        Int      @id @default(autoincrement())
  userId    Int
  eventId   Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  event     Event    @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
}
