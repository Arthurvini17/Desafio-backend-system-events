generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Events {
  id        Int         @id @default(autoincrement())
  nome      String
  descricao String
  data      DateTime
  local     String
  vagas     Int
  inscritos UserEvent[]
}

model Users {
  id         Int         @id @default(autoincrement())
  nome       String
  email      String      @unique
  password   String
  telefone   String
  inscricoes UserEvent[]
}

model UserEvent {
  id        Int      @id @default(autoincrement())
  userId    Int
  eventId   Int
  createdAt DateTime @default(now())

  user  Users  @relation(fields: [userId], references: [id])
  event Events @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId]) // evita inscrição duplicada
}
