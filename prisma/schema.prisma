generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Events {
  id        Int      @id @default(autoincrement())
  nome      String
  descricao String
  data      DateTime
  local     String
  users     Users[]  @relation("UserEvents")
}

model Users {
  id       Int      @id @default(autoincrement())
  nome     String
  email    String   @unique
  telefone String
  events   Events[] @relation("UserEvents")
}

